#include <bits/stdc++.h>
using namespace std;

int main() {
	int t;
	cin>>t;
	while(t--){
	    int n,k;
	    cin>>n>>k;
	    vector<int>arr(n);
	    for(int i=0;i<n;i++){
	        cin>>arr[i];
	    }
	    vector<int>num=arr;
	    sort(num.begin(),num.end());
	    int count=0;
	    if(k==1 && arr==num){
	        cout<<"YES"<<endl;
	    }
	    else if(k==1 && arr!=num){
	        cout<<"NO"<<endl;
	    }
	    else{
	        cout<<"YES"<<endl;
	    }
	}

}
